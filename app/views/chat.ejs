<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">
		<title>Multiroom Chat</title>
		<link rel="stylesheet" href="libs/bootstrap/index.css">
		<link href="css/style.css" rel="stylesheet">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css" integrity="sha256-+N4/V/SbAFiW1MPBCXnfnP9QSN3+Keu+NlB+0ev/YKQ=" crossorigin="anonymous"/>
		<script src="js/jquery.js"></script>
		<script type="text/javascript">
			$(document).ready(function(){
				$("#exibe_chat").click(function(){
					if(!$("#conversa").is(':visible') && $("#participantes").is(':visible')){
						$("#conversa").show();
						$("#participantes").hide();
						$('.navbar-toggler').click();
					}
				});
				
				$("#exibe_participantes").click(function(){
					if($("#conversa").is(':visible') && !$("#participantes").is(':visible')){
						$("#participantes").show();
						$("#conversa").hide();
						$('.navbar-toggler').click();
					}
				});
			});
		</script>
	</head>
	<body>
		<nav class="navbar navbar-expand-md bg-light sticky-top" role="navigation">
			<div class="container d-flex justify-content-between">
				<a class="navbar-brand text-secondary d-inline" href="#">Multiroom Chat</a>
				<div class="collapse navbar-collapse align" id="navbar">
					<ul class="navbar-nav">
						<li class="nav-item active">
							<a href="#" id="exibe_chat" class="nav-link text-dark">Chat</a>
						</li>
						<li class="nav-item">
							<a href="#" id="exibe_participantes" class="nav-link text-dark">Participantes</a>
						</li>
					</ul>
				</div>
				<p class="my-2 my-md-0 text-secondary">@<%= apelido %></p>
				<button type="button" class="navbar-toggler collapsed" id="btn_navbar_toggle" data-toggle="collapse" data-target="#navbar" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon">
						<i class="fas fa-bars"></i>
					</span>
				</button>
			</div>
		</nav>
		<div class="container">
            <div class="row justify-content-center" id="conversa">
				<div class="col-md-10 my-5" id="dialogos"></div>
            </div>
			<div class="row flex-column mt-5" id="participantes" style="display:none;">
				<div class="col-md-10" id="participantes"></div>
            </div>
        </div>
		<div class="container-fluid fixed-bottom bg-light py-2">
			<div class="container">
				<form id="sendMessageForm" class="form-inline">
					<input type="hidden" id="apelido" value="<%= apelido %>">
					<input type="text" id="mensagem" class="form-control col-md-10 col-9" placeholder="Mensagem">
					<button type="submit" id="submit" name="submit" class="btn btn-secondary col-sm-1 col-2 ml-3">
						<i class="fas fa-angle-right"></i>
					</button>
				</form>
			</div>
		</div>
		<script src="libs/bootstrap/index.js"></script>
		<script src="/socket.io/socket.io.js"></script>
		<script src="js/chat.js"></script>
	</body>
</html>